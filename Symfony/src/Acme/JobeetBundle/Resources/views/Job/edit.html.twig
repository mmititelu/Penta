{% extends 'JobeetBundle::layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('bundles/jobeet/css/jobs.css') }}" type="text/css" media="all" />
{% endblock %}
{% block content -%}
    <h1>Job edit</h1>

    <form action="{{ path('JobBundle_update', { 'token': entity.token }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('JobBundle') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('JobBundle_delete', { 'token': entity.token }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
